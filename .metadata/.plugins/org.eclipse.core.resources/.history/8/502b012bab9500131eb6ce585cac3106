package tank;

import java.awt.*;
import java.awt.event.*;


public class UserTank extends Tank {

	public void mouseDown(KeyEvent arg0) {
		if(arg0.getKeyChar() == "a") {
			moveTank(-1, 0);
		} else if (arg0.getKeyChar() == KeyEvent.VK_KP_RIGHT) {
			moveTank(1, 0);
		}
		if(arg0.getKeyChar() == KeyEvent.VK_KP_UP) {
			moveTank(0, -1);
		} else if (arg0.getKeyChar() == KeyEvent.VK_KP_DOWN) {
			moveTank(0, 1);
		}
	}
	
}
