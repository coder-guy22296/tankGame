package tank;

import java.awt.*;
import java.awt.event.*;


public class UserTank extends Tank {
	int speedX = 0, speedY = 0;
	UserTank(int x, int y, Board b){
		super(x, y, b);
	}
	public void mouseDown(KeyEvent arg0) {
		int key = arg0.getKeyCode();
		switch(key) {
		case KeyEvent.VK_A:
			speedY -= 1;
			break;
		case KeyEvent.VK_D:
			speedY += 1;
			break;
		case KeyEvent.VK_W:
			speedX -= 1;
			break;
		case KeyEvent.VK_S:
			speedX += 1;
			break;
		}
	}
	
}
