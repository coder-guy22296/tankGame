package tank;

import java.awt.*;
import java.awt.event.*;


public class UserTank extends Tank {
	int xSpeed = 0, ySpeed = 0;
	UserTank(int x, int y, Board b) {
		xLocation = x;
		yLocation = y;
		this.board = board;
	}
	public void update() {
		xLocation += xSpeed;
		yLocation += ySpeed;
	}
	public void handleKeyPress(KeyEvent arg0) {
		System.out.println(xSpeed + " : " + ySpeed);
		System.out.println(xLocation + " : " + yLocation);
		int key = arg0.getKeyCode();
		switch(key) {
		case KeyEvent.VK_A:
			if(ySpeed > -5) {
				ySpeed -= 1;
			}
			break;
		case KeyEvent.VK_D:
			if(ySpeed < 5) {
				ySpeed += 1;
			}
			break;
		case KeyEvent.VK_W:
			if(xSpeed > -5) {
				xSpeed -= 1;
			}
			break;
		case KeyEvent.VK_S:
			if(xSpeed < 5) {
				xSpeed += 1;
			}
			break;
		}
	}
	
}
